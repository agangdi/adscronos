# OpenAI API Key for intent recognition
OPENAI_API_KEY=your_openai_api_key_here

# Cronos wallet private key (for x402 buyer - making payments)
# This wallet should have TCRO balance to pay for services (0.1 TCRO per request)
WALLET_PRIVATE_KEY=your_buyer_wallet_private_key_here

# x402 Seller Configuration
# Wallet address that receives TCRO payments from x402 transactions
SELLER_WALLET=your_seller_wallet_address_here

# Faucet wallet private key (for faucet service)
# This wallet should have CRO balance to distribute to users (0.1 CRO per request)
FAUCET_PRIVATE_KEY=your_faucet_wallet_private_key_here

# Service URLs (x402-protected services)
BALANCE_SERVICE_URL=http://localhost:3001/api/balance
FAUCET_SERVICE_URL=http://localhost:3002/api/faucet

# Service Ports
PORT=8000
BALANCE_SERVICE_PORT=3001
FAUCET_SERVICE_PORT=3002

AD_API_BASE_URL=https://your-domain.com
AD_API_KEY=your_ad_api_key_here
